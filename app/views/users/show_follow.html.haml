= provide(:title, @title)
%div.row
  %div.large-4.large.columns
    %section
      = gravatar_for @user
      %h1
        = @user.name
      %span
        = link_to "View my profile", @user
      %span
        %b Microposts:
        = @user.microposts.count
    %section
      = render 'shared/stats'
      - if @users.any?
        %div.users_avatars
          - @users.each do |user|
            = link_to gravatar_for(user, size: 30), user
  %div.large-8.large.columns
    %h3
      = @title
    - if @users.any?
      %ul.users
        = render @users
      = will_paginate @users, renderer: FoundationPagination::Rails    

            
