= provide(:title, 'Sign In')
%div.row
  %div.large-12.large-centered.columns
    %h1 Sign In
    = form_for(:session, url: sessions_path) do |f| 
      = f.label :email
      = f.text_field :email
      = f.label :password
      = f.password_field :password
      
      = f.submit "Sign In", class: "button"
    %p
      New user?
      = link_to "Sign Up now!", signup_path 